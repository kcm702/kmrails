<div class="row">
	<div class="span6 offset3">
		<div class="well">
			<p align="center">
				<%= link_to (image_tag @pin.image), (@pin.website), :target => '_blank' %>
			</p>
			<p>
			  	<%= @pin.description %><br />
			  	<% if @pin.website==nil %>
			  		
			  	<% else %>
			  		<%= link_to (@pin.website), (@pin.website), :target => '_blank', class: 'pin_origin' %>
			  	<% end %>
			</p>
			<p>
			  	Posted by <%= @pin.user.username %>
			</p>
			<% if current_user == @pin.user %>
			<%= link_to 'Edit', edit_pin_path(@pin) %> |
			<%= link_to 'Destroy', @pin, method: :delete, data: { confirm: 'Are you sure?' } %> |
			<% end %>
			<%= link_to 'Back', pins_path %>
		</div>
	</div>
</div>