<div class="box">
	<p><%= link_to (image_tag pin.image(:medium)), pin %>
	</p>
	<p>
		<%= pin.description %>
	</p>
	<p>
		Posted by <%= link_to pin.user.username, pin.user %>
	</p>	
	<p>
		<%= link_to 'Show', pin %>
	      
		<% if current_user == pin.user %>
			| <%= link_to 'Edit', edit_pin_path(pin) %> |
			<%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
		<% end %>
	</p>
</div>
